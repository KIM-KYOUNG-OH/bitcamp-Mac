				String []data = {name, num, price};
				for(int i)
				model.addRow(rowData);
				
				// 테이블 각행 파일에 추
			}
		});
		
		btnDelete.addActionListener(new ActionListener() {
			
			@Override
			public void actionPerformed(ActionEvent e) {
				
			}
		});
	}
	
	
	public static void main(String[] args) {
		new Ex5FileMunje("파일shop");
	}

	
}
